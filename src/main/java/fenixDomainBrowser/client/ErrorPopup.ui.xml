<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.bold{
			font-weight:bold;
		}
	</ui:style>
	<g:VerticalPanel>
		<g:HTML>
			<div
				style='font-weight:bold; width:490px; margin:0px; padding:5px; font-size:20px; background:red; color:white; margin-bottom:10px;'>Error occurred!</div>
		</g:HTML>
		<g:VerticalPanel ui:field="content">
		<g:Label ui:field="message" addStyleNames="bold"></g:Label>
		</g:VerticalPanel>
	
	</g:VerticalPanel>
</ui:UiBinder> 